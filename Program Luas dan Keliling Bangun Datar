#PROGRAM MENGHITUNG LUAS DAN KELILING BANGUN DATAR 
#PROGRAM OLEH IVANA INTAN PARAMITA & SULAS SRI 

def luas_persegi(s):
    L=s*s
    return L
def luas_persegi_panjang(p,l):
    L=p*l
    return L
def luas_segitiga(a,t):
    L=0.5*a*t
    return L
def luas_lingkaran(r):
    L=22/7*r*r
    return L
def keliling_persegi(s):
    K=4*s
    return K
def keliling_persegi_panjang(p,l):
    K=2*(p+l)
    return K
def keliling_segitiga(a,b,c):
    K=a+b+c
    return K
def keliling_lingkaran(r):
    K=22/7*2*r
    return K


pilihan=1
while pilihan !=0:
    print("MENGHITUNG LUAS DAN KELILING BANGUN DATAR")
    print("PILIH OPERASI BANGUN DATAR BERIKUT INI")
    print("1. Luas Persegi")
    print("2. Luas Persegi Panjang")
    print("3. Luas Segitiga")
    print("4. Luas Lingkaran")
    print("5. Keliling Persegi")
    print("6. Keliling Persegi Panjang")
    print("7. Keliling Segitiga")
    print("8. Keliling Segitiga")
    print("0. Exit")
    
    pilihan = int(input("Masukkan pilihan :"))
    if pilihan == 1:
        print("\n")
        print("Luas Persegi")
        s=int(input("Sisi="))
        print("Luas persegi :%d\n" %luas_persegi(s))
        
    elif pilihan == 2:
        print("\n")
        print("Luas Persegi panjang")
        p=int(input("Panjang="))
        l=int(input("Lebar="))
        print("Luas persegi panjang :%d\n" %luas_persegi_panjang(p,l))
        
    elif pilihan == 3:
        print("\n")
        print("Luas Segitiga")
        a=int(input("Alas="))
        t=int(input("Tinggi:"))
        print("Luas segitiga :%d\n" %luas_segitiga(a,t))
        
    elif pilihan == 4:
        print("\n")
        print("Luas lingkaran")
        r=float(input("Jari-jari="))
        print("Luas lingkaran :%d\n" %luas_lingkaran(r))
        
    elif pilihan == 5:
        print("\n")
        print("Keliling Persegi")
        s=int(input("Sisi="))
        print("Keliling persegi :%d\n" %keliling_persegi(s)) 
        
    elif pilihan == 6:
        print("\n")
        print("Keliling Persegi panjang")
        p=int(input("Panjang="))
        l=int(input("Lebar="))
        print("Keliling persegi panjang :%d\n" %keliling_persegi_panjang(p,l))
        
    elif pilihan == 7:
        print("\n")
        print("Keliling Segitiga")
        a=int(input("Alas="))
        b=int(input("Sisi miring1="))
        c=int(input("Sisi miring2="))
        print("Keliling segitiga :%d\n" %keliling_segitiga(a,b,c))
        
    elif pilihan == 8:
        print("\n")
        print("Keliling lingkaran")
        r=float(input("Jari-jari="))
        print("Keliling lingkaran :%d\n" %keliling_lingkaran(r))
        
    elif pilihan == 0: 
        print("\n")
        print("Terima kasih telah menggunakan tools ini")
        print("Exit...")
        break
        
    else:
        print("Maaf, Pilihan anda salah!!")
    
    ulang =""
    
    while ulang != "y" and ulang!= "t" :
        ulang = input("Kembali ke menu utama [y/t] ? ")
    
    if ulang == "t":
        print("Aplikasi Berhenti. Exit...")
        break
